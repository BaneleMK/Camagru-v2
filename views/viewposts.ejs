                                    <div class="postoptionsflexbox">
                                        <options><flextext><%= user.username %></flextext></options>
                                    </div>
                            </div>
                        <% }
                    %>

                            <div class="postoptionsflexbox">
                                
                                <options><flextext><a href=/user/viewposts/0>First</a></flextext></options>
